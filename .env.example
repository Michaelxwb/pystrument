# 基于Pyinstrument的性能分析平台环境配置
# 复制此文件为 .env 并根据需要修改配置

# =============================================================================
# 数据库配置
# =============================================================================
MONGODB_PASSWORD=admin123
REDIS_PASSWORD=redis123

# =============================================================================
# 应用配置
# =============================================================================
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production
LOG_LEVEL=INFO

# =============================================================================
# AI服务配置
# =============================================================================
# OpenAI API配置
OPENAI_API_KEY=your-openai-api-key-here

# 自定义AI服务配置（可选）
# CUSTOM_AI_ENDPOINT=http://your-ai-service.com/api
# CUSTOM_AI_TOKEN=your-custom-ai-token

# =============================================================================
# 监控配置
# =============================================================================
# 默认采样率（0.0-1.0）
DEFAULT_SAMPLING_RATE=0.3

# 批量发送配置
MAX_BATCH_SIZE=100
ASYNC_SEND_TIMEOUT=5

# =============================================================================
# 安全配置
# =============================================================================
# CORS允许的源（逗号分隔）
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 请求大小限制（字节）
MAX_REQUEST_SIZE=10485760

# =============================================================================
# 前端配置
# =============================================================================
# API基础URL
VITE_API_BASE_URL=http://localhost:8000/api

# WebSocket URL
VITE_WS_BASE_URL=ws://localhost:8000/ws

# 应用信息
VITE_APP_TITLE=性能分析平台
VITE_APP_VERSION=1.0.0

# =============================================================================
# 开发配置
# =============================================================================
# 开发环境代理
VITE_DEV_PROXY=true
VITE_DEV_PORT=3000

# =============================================================================
# 生产配置示例
# =============================================================================
# 生产环境时取消注释并修改以下配置

# 生产数据库配置
# MONGODB_URL=mongodb://admin:strong-password@mongodb-server:27017/pystrument?authSource=admin
# REDIS_URL=redis://:strong-password@redis-server:6379/0

# 生产安全配置
# SECRET_KEY=your-production-secret-key-very-long-and-random
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# SSL证书配置（如果使用HTTPS）
# SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
# SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# 邮件通知配置（可选）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ADMIN_EMAIL=admin@your-domain.com

# =============================================================================
# 其他配置
# =============================================================================
# 时区设置
TZ=Asia/Shanghai

# 文件上传配置
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES=json,yaml,yml

# 数据保留策略
DATA_RETENTION_DAYS=90
AUTO_CLEANUP_ENABLED=true